<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


<header>
 <nav class="navbar navbar-inverse">
  <div class="container-fluid">
   <div class="row">
    <div class="col-lg-4">
     <a class="navbar-brand">Bookers</a>
    </div>
    <div class="col-lg-8">
     <ul class="nav navbar-nav navbar-right">
       <% if user_signed_in? %>
        <li class="">
          <%= link_to "Home", user_path(current_user.id), class: "home glyphicon glyphicon-home" %>
        </li>
        <li clas="">
          <%= link_to "Users", users_path, class: "users glyphicon glyphicon-user" %>
        </li>
        <li class="">
          <%= link_to "Books", books_path, class: "books glyphicon glyphicon-book" %>
        </li>
        <li class="">
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "logout glyphicon glyphicon-log-out" %>
        </li>
       <% else %>

        <li class="">
          <%= link_to "Home", root_path, class: "home glyphicon glyphicon-home" %>
        </li>
        <li class="">
          <%= link_to "About", about_path, class: "about glyphicon glyphicon-link" %>
        </li>
        <li class="">
          <%= link_to "Sign up", new_user_registration_path, class: "sign_up glyphicon glyphicon-edit" %>
        </li>
        <li class="">
          <%= link_to "Login", new_user_session_path, class: "sign_in glyphicon glyphicon-log-in" %>
        </li>
      <% end %>
     </ul>
    </div>
   </div>
  </div>
 </nav>
</header>


  <%= yield %>

  <footer>
 <div class="row">
  <div class="col-lg-8 col-lg-offset-8">CopyRight Infratop.inc</div>
 </div>
</footer>

  </body>
</html>
